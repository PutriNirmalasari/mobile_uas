<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background=""
    tools:context=".MainActivity">
    <Button
        android:layout_width="500dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        android:background="#FF000000"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi News"
        android:layout_marginTop="1dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:drawableStart="@android:drawable/ic_search_category_default"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constrainBotton_toBottenOf="parent"
        app:layout_constraintLeft_toLefOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLogin"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background=">#FF000000"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="20dp"
        android:hint=""
        android:padding="28dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"

        />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background=""
        android:drawableStart=""
        android:drawablePadding="20dp"
        android:hint="20 ribu kendaraan keluar dari Jalur Puncak Bogor"
        android:textSize="17sp"
        android:textStyle="bold"
        android:padding="28dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background=""
        android:drawableStart=""
        android:drawablePadding="20dp"
        android:hint="Kabupaten Bogor (ANTARA) - Satuan Lalu Lintas Kepolisian Resor Bogor mencatat sebanyak 20 ribu kendaraan keluar dari Jalur Wisata Puncak, Kabupaten Bogor, Jawa Barat, pada hari terakhir libur panjang perayaan Natal, Selasa."
        android:textSize="17sp"
        android:textStyle=""
        android:padding="28dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />
    <Button
        android:layout_width=""
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/colorPrimary"
        android:text="LOGIN"
        android:textSize="20dp"

        />
    <Button
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="510dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/colorPrimary"
        android:text=""
        android:textSize="20dp" />


    <ImageView
        android:id="@+id/img0"
        android:layout_width="2in"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart=""
        android:layout_marginLeft="-80dp"
        android:layout_marginTop="-57dp"
        android:src="@drawable/gambar0" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart=""
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-140dp"
        android:src="@drawable/jalan" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src=""
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et"
        android:text=""
        android:layout_centerHorizontal="true"


        />
</RelativeLayout>
